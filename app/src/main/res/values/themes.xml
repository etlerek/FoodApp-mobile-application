<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#4CB963</item>
        <item name="colorPrimaryVariant">#A0EADE</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">#5C6784</item>
        <item name="colorSecondaryVariant">#26314A</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#4CB963</item>
        <item name="windowNoTitle">true</item>
        <item name="imageButtonStyle">@style/FoodAppImageButton</item>
        <item name="android:textViewStyle">@style/FoodAppTextView</item>
        <item name="android:popupMenuStyle">@style/FoodAppPopupMenu</item>
        <item name="alertDialogTheme">@style/FoodAppAlertDialog</item>
        <item name="editTextStyle">@style/FoodAppEditText</item>
    </style>

    <style name="Theme.FoodApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FoodAppEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/colorPrimaryVariant</item>
    </style>

    <style name="FoodAppButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/round_corner_button</item>
    </style>

    <style name="FoodAppImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/round_corner_button</item>
        <item name="android:fontFamily">@font/lobster</item>
    </style>

    <style name="FoodAppTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/monsterrat</item>
    </style>

    <style name="FoodAppPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/gradient_background</item>
    </style>

    <style name="FoodAppAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#26314A</item>
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="buttonStyle">@style/FoodAppButton</item>
    </style>

    <style name="Theme.FoodApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FoodApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>